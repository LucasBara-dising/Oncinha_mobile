<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="icon_roleta">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="card_loja">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <style name="card_loja_img">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="card_loja_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">200dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cadastro_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="cadastro_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">34dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:ems">10</item>
    </style>

</resources>