<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_escuro"
    tools:context=".Mercado">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewHome"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_btn_loja" />

    <TextView
        android:id="@+id/textViewSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="42dp"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:text="R$ 2.012,10"
        android:background="@drawable/arredondado_amarelo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="84dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/arredondado_verde"
        android:padding="4dp"
        android:text="@string/txtMoedas"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSaldo" />


    <LinearLayout
        android:id="@+id/box_moeda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">


        <androidx.cardview.widget.CardView
            android:id="@+id/add10Moedas"
            style="@style/card_loja"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/moedas1"
                style="@style/card_loja_img"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_moedas" />

            <TextView
                style="@style/card_loja_text"
                android:background="@drawable/arredondado_amarelo"
                android:text="10" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/arredondado_verde"
                android:gravity="center_horizontal|center_vertical"
                android:text="$"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/add100Moedas"
            style="@style/card_loja"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <ImageView
                style="@style/card_loja_img"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_bau" />

            <TextView
                style="@style/card_loja_text"
                android:background="@drawable/arredondado_amarelo"
                android:text="100" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="160dp"
                android:background="@drawable/arredondado_verde"
                android:gravity="center_horizontal|center_vertical"
                android:text="$"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


        <TextView
            android:id="@+id/textViewBagdes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="84dp"
            android:background="@drawable/arredondado_verde"
            android:padding="4dp"
            android:text="Bagdes"
            android:textAlignment="center"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/box_moeda" />

        <LinearLayout
            android:id="@+id/box_bagdes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewBagdes">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

    <TextView
        android:id="@+id/textViewAvatares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="84dp"
        android:background="@drawable/arredondado_verde"
        android:padding="4dp"
        android:text="Avatares"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_bagdes" />

    <LinearLayout
        android:id="@+id/avaresCol1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAvatares">


        <androidx.cardview.widget.CardView
            style="@style/card_loja"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <ImageView
                style="@style/card_loja_img"
                android:contentDescription="@string/app_name"
                android:src="@drawable/avatar_mago_fogo" />

            <TextView
                style="@style/card_loja_text"
                android:background="@drawable/arredondado_amarelo"
                android:text="20.000" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="160dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/icon_magico"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/card_loja"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <ImageView
                style="@style/card_loja_img"
                android:contentDescription="@string/app_name"
                android:src="@drawable/avatra_onca_heroi" />

            <TextView
                style="@style/card_loja_text"
                android:background="@drawable/arredondado_amarelo"
                android:text="10.000" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="160dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/icon_magico"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/card_loja"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">

            <ImageView
                style="@style/card_loja_img"
                android:contentDescription="@string/app_name"
                android:src="@drawable/avatar_india" />

            <TextView
                style="@style/card_loja_text"
                android:background="@drawable/arredondado_amarelo"
                android:text="15.000" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="160dp"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/icon_magico"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/avaresCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            android:layout_marginTop="22dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAvatares">


            <androidx.cardview.widget.CardView
                style="@style/card_loja"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp">

                <ImageView
                    style="@style/card_loja_img"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/avatar_mago" />

                <TextView
                    style="@style/card_loja_text"
                    android:background="@drawable/arredondado_amarelo"
                    android:text="10.000" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="160dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:src="@drawable/icon_magico"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_loja"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp">

                <ImageView
                    style="@style/card_loja_img"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/avatar_elfo" />

                <TextView
                    style="@style/card_loja_text"
                    android:background="@drawable/arredondado_amarelo"
                    android:text="13.000" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="160dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:src="@drawable/icon_magico"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/card_loja"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="16dp"
                app:cardElevation="5dp">

                <ImageView
                    style="@style/card_loja_img"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/avatar_sereia" />

                <TextView
                    style="@style/card_loja_text"
                    android:background="@drawable/arredondado_amarelo"
                    android:text="17.000" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="160dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:src="@drawable/icon_magico"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>