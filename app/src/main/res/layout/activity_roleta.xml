<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".roleta">

    <LinearLayout
        android:id="@+id/linearLayoutInfos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/FatecCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fatec Coins"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/InfoCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="8451"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FatecCoins" />

            <Button
                android:id="@+id/addCoins"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="24dp"
                android:text="+"
                app:layout_constraintStart_toEndOf="@+id/InfoCoins"
                app:layout_constraintTop_toTopOf="@+id/FatecCoins" />


            <Button
                android:id="@+id/subAposta"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:text="-"
                app:layout_constraintEnd_toStartOf="@+id/infoAposta"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/infoAposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Aposta"
                app:layout_constraintEnd_toStartOf="@+id/addAposta"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/valorAposta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                app:layout_constraintEnd_toEndOf="@+id/infoAposta"
                app:layout_constraintStart_toEndOf="@+id/subAposta"
                app:layout_constraintTop_toBottomOf="@+id/infoAposta" />

            <Button
                android:id="@+id/addAposta"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:text="+"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutInfos">


        <ImageView
            android:id="@+id/slot1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sol" />

        <ImageView
            android:id="@+id/slot2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/lua_2" />

        <ImageView
            android:id="@+id/slot3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/lua" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutInfos">

        <ImageView
            android:id="@+id/slot4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sol" />

        <ImageView
            android:id="@+id/slot5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/lua_2" />

        <ImageView
            android:id="@+id/slot6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/lua" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutInfos">

        <ImageView
            android:id="@+id/slot7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sol" />

        <ImageView
            android:id="@+id/slot8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/lua_2" />

        <ImageView
            android:id="@+id/slot9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/lua" />

    </LinearLayout>

    <Button
        android:id="@+id/girar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Girar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
</androidx.constraintlayout.widget.ConstraintLayout>